@page
@model Elderson.Pages.SymptomsModel
@{
}
<div style="margin:100px;"></div>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="">Enter a description of your symptoms:</label>
            <textarea asp-for="mySymptoms" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="">When did your symptoms start to appear:</label>
            <input asp-for="mySymptomStart" type="date"/>
        </div>
        <div style="display:inline-block">
            <div style="float:left"><a asp-page="/Clinic" class="btn btn-primary">Back</a></div>
            <div style="float:right"><button class="btn btn-primary">Continue</button></div>
        </div>
    </form>
</div>
