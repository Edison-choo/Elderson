@page
@model Elderson.Pages.Pharmacist.Prescrip.ViewNewPrescriptionModel
@{
    Layout = "Shared/_LayoutOrganization";
    ViewData["Title"] = "New Prescriptions Page";
    ViewData["Header"] = "NEW PRESCRIPTIONS";
    ViewData["Breadcrumb"] = "Prescriptions";
}

<style>
    a {
        color: white;
        text-decoration: none;
    }

    .dropdown-toggle::after {
        display: none;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        console.log("Loading webpage...")
        $.ajax({
            url: 'https://localhost:44311/api/Inventory/GetPrescriptions',
            type: 'GET',
            success: function (result) {
                console.log("Items retrieve successfully")
                console.log(JSON.parse(result));

            }
        });
        $('#inventorytable').DataTable(
            {
                "ajax": {
                    'url': 'https://localhost:44311/api/Inventory/GetPrescriptions',
                    'type': 'GET',
                    "dataSrc": function (json) {
                        return JSON.parse(JSON.stringify(json));
                    }
                },
                "columns": [
                    { "data": "Id"  },
                    { "data": "PatientName" },
                    { "data": "DoctorName" },
                    { "data": "Date" },
                    {
                        "data": function (data, type, full) {
                            return `<div class="btn-group">
                                        <button type="button" class="btn dropdown-toggle dropdown-toggle-split" id=${"dropdownMenuSplitButton" + data.Id} data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i style="font-size:1.5em;" class="mdi mdi-dots-vertical"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby=${"dropdownMenuSplitButton" + data.Id}>
                                            <a class="dropdown-item" href="/Pharmacist/Prescrip/ViewPrescriptionObj?id=${data.Id}&formId=${data.FormId}">View</a>
                                        </div>
                                    </div>`;
                            }
                        }
                    ],
                    "info": true,
                    "ordering": true,
                    "search": true,
                    "processing": true,
                    'autoWidth': false,
                    'lengthChange': false,
                    'paging': true,
                    'pagingType':'numbers',
                    'ordering': false,
                    'dom': "fltip",
                    'pageLength': 5
                }
            );
        });
</script>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <h4 class="card-title">New Prescription Table</h4>
            <input type="hidden"/>

        </div>
        <div class="table-responsive">

            <table class="table table-hover" id="inventorytable" style="width:100%">
                <thead>
                    <tr>
                        <th>PrescriptionID</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Options</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>

</div>
