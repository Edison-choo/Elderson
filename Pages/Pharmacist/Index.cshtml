@page
@model Elderson.Pages.Pharmacist.IndexModel
@{
    Layout = "Shared/_LayoutOrganization";
    ViewData["Title"] = "Home";
    ViewData["Header"] = "HOME";
    ViewData["Breadcrumb"] = "Home";
}

<body>
    <div class="card">
        <div class="card-body">
            <canvas id="medicalsupply" width="100" height="30">
            </canvas>
        </div>
    </div>
    <div class="mt-3"></div>
    <div class="row">
        <div class=" col-4">
            <div class="card">
                <div class="card-body">
                    <p>Incoming Prescription</p>
                    <canvas id="earningschart"></canvas>
                </div>
            </div>
        </div>
        <div class=" col-4">
            <div class="card">
                <div class="card-body">
                    <p>Notepad</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    const ctx = document.getElementById('medicalsupply').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Zithromax', 'Paracetomol', 'Norvasc', 'Advil', 'Protonix', 'Amoxil'],
            datasets: [{
                label: '# of Bottles',
                data: [12, 19, 8, 10, 15, 7],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
