@page
@model Elderson.Pages.DRR.EditFormModel
@{
    Layout = "Shared/_LayoutOrganization";
    ViewData["Title"] = "Edit Template Form";
    ViewData["Breadcrumb"] = "Elderson > Form > Edit Form";
    ViewData["Header"] = "Edit Template Form";
}

<style>
    .customForm-input {
        width: 100%;
    }

    #btnContainer {
        margin-top: 5%;
    }

    #submitBtn {
        float: right;
    }

    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    #formtable_wrapper {
        width: 70%;
        margin: 0 auto;
        padding: 5%;
        background-color: seashell;
    }

    #formtable {
        width: 70%;
        margin: 0 auto;
    }


    #medtable_filter {
        display: none;
    }

    #medtable_info {
        display: none;
    }

    #medtable_paginate {
        float: right;
    }

    .medBtn {
        cursor: pointer;
    }

    #quanDiv {
        display: none;
        margin: 0 auto;
        padding-bottom: 2%;
        width: 70%;
        background-color: seashell;
        padding-left: 5%;
        padding-right: 5%;
    }

    #formtable_info {
        display: none;
    }

    #formtable_paginate {
        float: right;
    }

    #medtable thead tr {
        background-color: lightseagreen;
    }

    #medtable thead tr th {
        background-color: lightseagreen;
        padding: 1%;
    }

    #medtable tbody tr td {
        padding: 1%;
    }

    #addedMeds {
        margin-top: 1%;
    }

    #alertPopup {
        display: none;
    }

    .alert {
        padding: 20px;
        background-color: #f44336;
        color: white;
        width: 100%;
    }

    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>

<div class="alert" id="alertPopup">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    Please add quantity of medicine
</div>

<div class="customForm">
    <form method="post">
        <p>Template Name:</p>
        <input asp-for="editForm.TemplateName" class="customForm-input" />
        <input asp-for="editForm.Id" type="hidden" id="editFormId" />
        <input asp-for="editForm.DoctorId" type="hidden" />
        <br />

        <br />
        <div class="addMeds" id="addMeds">
            <p style="margin-top:1%;">
                <h3>Medication Needed:    <i class="medBtn fa fa-plus-circle fa-lg" id="plus" onclick="displayAddMeds()"></i><i class="medBtn fa fa-minus-circle fa-lg" id="minus" onclick="closeAddMeds()"></i></h3>
            </p>
            <div class="table-responsive" id="allMeds">
                <table id="formtable" style="width:100%;" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Medicine Type</th>
                            <th>Allergy</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>

                <h3 style="text-align:center; background-color: seashell; width: 70%; margin: 0 auto; padding-bottom: 3%;">Quantity: </h3>
                <div id="quanDiv">
                    <label id="medicinename" style="width: 35%;"></label>
                    <div class="input-group">
                        <i class="medBtn fa fa-minus-square fa-2x" onclick="reduce()"></i> <input type="number" class="quantity" id="quantity" value="0" step="0" min="0" max="20" readonly style="width:70%;text-align:center; height: 80%;"> <i class="medBtn fa fa-plus-square fa-2x" onclick="add()"></i>
                    </div>
                    <input type="hidden" id="medid" />
                    <a onclick="addMedication()" class="btn btn-primary" style="color:white; float:left;">Confirm</a>
                </div>
            </div>

            <div class="table-responsive" id="addedMeds">
                <table id="medtable" style="width:100%" border="1">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th style="width:20%;">Quantity</th>
                            <th style="width:175px;">Medicine Type</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div id="btnContainer">
            <div><a href="/DRR/Form" class="btn btn-danger">Back</a></div>
            <button id="submitBtn" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>

<script>
    var allMed = document.getElementById("allMeds");
    allMed.style.display = "none";
    document.getElementById("minus").style.display = "none";

    function callquanDiv(id, medname) {
        document.getElementById("medid").value = id;
        document.getElementById("medicinename").innerHTML = medname;
        document.getElementById("quanDiv").style.display = "flex";
    }

    callMedsTable();

    function callMedsTable() {
        $(document).ready(function () {
            console.log("Loading webpage...")
            $.ajax({
                url: 'https://localhost:44311/api/FormMeds/' + document.getElementById("editFormId").value,
                type: 'GET',
                success: function (result) {
                    console.log("Items retrieve successfully")
                    console.log(JSON.parse(result));

                }
            });
            $('#medtable').DataTable(
                {
                    "ajax": {
                        'url': 'https://localhost:44311/api/FormMeds/' + document.getElementById("editFormId").value,
                        'type': 'GET',
                        "dataSrc": function (json) {
                            return JSON.parse(JSON.stringify(json));
                        }
                    },
                    "columns": [
                        { "data": "MedName" },
                        { "data": "Quantity" },
                        { "data": "MedType" },
                        {
                            "data": function (data) {
                                return `
                                <a onclick="deleteMedication('${data.Id}')" class="btn btn-danger">Delete</a>
                            `;
                            }
                        }
                    ],
                    "info": true,
                    "ordering": true,
                    "search": false,
                    "processing": true,
                    'autoWidth': false,
                    'lengthChange': false,
                    'paging': true,
                    'pagingType': 'numbers',
                    'ordering': false,
                    'dom': "fltip",
                    'pageLength': 5
                }
            );
        });
    }

    $(document).ready(function () {
        console.log("Loading webpage...")
        $.ajax({
            url: 'https://localhost:44311/api/FormMeds/GetInvMeds',
            type: 'GET',
            success: function (result) {
                console.log("Items retrieve successfully")
                console.log(JSON.parse(result));

            }
        });
        $('#formtable').DataTable(
            {
                "ajax": {
                    'url': 'https://localhost:44311/api/FormMeds/GetInvMeds',
                    'type': 'GET',
                    "dataSrc": function (json) {
                        return JSON.parse(JSON.stringify(json));
                    }
                },
                "columns": [
                    { "data": "MedName" },
                    { "data": "MedType" },
                    { "data": "MedAllergyIngredients" },
                    {
                        "data": function (data) {
                            return `
                                <a onclick="callquanDiv('${data.Id}', '${data.MedName}')" class="btn btn-primary" style="color:white">Select</a>
                            `;
                        }
                    }
                ],
                "info": true,
                "ordering": true,
                "search": false,
                "processing": true,
                'autoWidth': false,
                'lengthChange': false,
                'paging': true,
                'pagingType': 'numbers',
                'ordering': false,
                'dom': "fltip",
                'pageLength': 5
            }
        );
    });

    function displayAddMeds() {
        allMed.style.display = "block";
        document.getElementById("minus").style.display = "inline";
        document.getElementById("plus").style.display = "none";


    }

    function closeAddMeds() {
        allMed.style.display = "none";
        document.getElementById("minus").style.display = "none";
        document.getElementById("plus").style.display = "inline";
    }

    function add() {
        document.getElementById("quantity").stepUp();
    }

    function reduce() {
        document.getElementById("quantity").stepDown();
    }

    function addMedication() {
        var id = document.getElementById("medid").value;
        var uuidVal = document.getElementById("editFormId").value;
        var quantity = document.getElementById("quantity").value;
        if (quantity < 1) {
            document.getElementById("alertPopup").style.display = "block";
            const alertTimeout = setTimeout(function () {
                document.getElementById("alertPopup").style.display = "none";
            }, 2500);
        }
        else {
            $.ajax({
                url: 'https://localhost:44311/api/FormMeds/' + id + '/' + uuidVal + '/' + quantity,
                type: 'POST',
                success: function (result) {
                    console.log("Item added successfully");
                    document.getElementById("medid").value = "";
                    document.getElementById("quanDiv").style.display = "none";
                    document.getElementById("medicinename").innerHTML = "";
                    $('#medtable').DataTable().ajax.reload();
                }
            });
        }
    }

    function deleteMedication(id) {
        $.ajax({
            url: 'https://localhost:44311/api/FormMeds/' + id,
            type: 'DELETE',
            success: function (result) {
                console.log("Item deleted successfully");
                $('#medtable').DataTable().ajax.reload();
            }
        });
    }
</script>