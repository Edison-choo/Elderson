@page
@model Elderson.Pages.Users.UserManagementModel
@{
    Layout = "Shared/_LayoutITSupport";
    ViewData["Title"] = "User management page";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">All User Table</h4>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.allusers)
                    {
                        <tr>
                            <td>@item.Fullname</td>
                            <td>@item.UserType</td>
                            <td class="text-danger"><label class="badge badge-danger">Locked</label></td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary"><a asp-page="Profile" asp-route-id="@item.Id">View</a> </button>
                                    @*<button type="button" class="btn btn-primary"><a asp-page="Edit" asp-route-id="@item.Id">Edit</a> </button>*@
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">Edit </button>
                                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" id="@item.Id" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="#@item.Id">
                                        <a class="dropdown-item" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="dropdown-item" asp-page="Lock" asp-route-id="@item.Id">Lock</a>
                                        <a class="dropdown-item" asp-page="ChangePwd" asp-route-id="@item.Id">Change password</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div class="text-center">
                                            <h4>
                                                Are you sure you want to delete this user?

                                            </h4>
                                        </div>
                                        <div class="d-flex justify-content-between" style="margin-top:30px;">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-danger"><a href="https://https:/localhost:44311/api/User/Delete/">Delete</a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

