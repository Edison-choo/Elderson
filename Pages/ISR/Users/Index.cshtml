<script>

    function deleteUser(userId) {
        $.ajax({
            url: 'https://localhost:44311/api/User/' + userId,
            type: 'DELETE',
            success: function (result) {

                console.log(result);
                console.log("Item delete successfully");
                $('#userstable').DataTable().ajax.reload();
                $('.fade').hide();


            }
        });
    }

    function message(userId) {
        $.ajax({
            url: 'https://localhost:44311/api/User/ChatUser/' + userId,
            type: 'GET',
            success: function (result) {

                console.log(result);
                window.location.href = "/ISR/Contacts/Chat";


            }
        });
    }
</script>

