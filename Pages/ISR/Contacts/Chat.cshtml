    }

    .main-section h3, .main-section h5 {
        margin: 0px;
    }

    .main-section {
        background-color: #fff;
        margin: auto;
    }

    .head-section {
        clear: both;
        overflow: visible;
        width: 100%;
        height: 75px;
    }

    .headLeft-section {
        width: 100%;
        float: left;
